<?xml version='1.0' encoding='utf-8'?>
<widget id="com.enesoft.ligacde" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LigaCDE</name>
    <description>
        Sistema de Ranking de billar Casa de Espa√±a
    </description>
    <author email="fleonor04@gmail.com" href="">
        Fernando Leonor
    </author>
    <content src="index.html" />
    <access origin="*" />
	<allow-intent href="http://162.243.134.210/ligacde/cde/" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="17" />
		<preference name="orientation" value="portrait" />		
		<preference name="SplashMaintainAspectRatio" value="true" />
		<preference name="SplashScreenDelay" value="3000" />
        <allow-intent href="market:*" />		
		
		<splash src="platforms\android\res\drawable-port-hdpi\screen.png" platform="android" qualifier="port-hdpi" />
		<splash src="platforms\android\res\drawable-port-mdpi\screen.png" platform="android" qualifier="port-mdpi" />
		<splash src="platforms\android\res\drawable-port-ldpi\screen.png" platform="android" qualifier="port-ldpi" />
		<splash src="platforms\android\res\drawable-port-xhdpi\screen.png" platform="android" qualifier="port-xhdpi" />

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
		<preference name="orientation" value="portrait" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
</widget>
